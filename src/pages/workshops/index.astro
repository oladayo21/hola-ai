---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const workshops = await getCollection('workshops', ({ data }) => !data.draft);
---

<Base title="Workshops" description="Workshop-Reihen zu KI-Tools im Coding-Alltag.">
  <section class="page">
    <div class="container">
      <header class="page-header">
        <h1>Workshops</h1>
        <p class="page-description">
          Praxisnahe Workshop-Reihen zu KI-gestütztem Coding.
        </p>
      </header>

      <div class="workshop-list">
        {workshops.map((workshop) => (
          <article class="workshop-card">
            <div class="workshop-content">
              <h2>
                <a href={`/workshops/${workshop.id}`}>{workshop.data.title}</a>
              </h2>
              <p class="workshop-description">{workshop.data.description}</p>

              {workshop.data.topics && workshop.data.topics.length > 0 && (
                <ul class="workshop-topics">
                  {workshop.data.topics.map((topic) => (
                    <li>{topic}</li>
                  ))}
                </ul>
              )}
            </div>

            {(workshop.data.dates || workshop.data.time) && (
              <div class="workshop-meta">
                {workshop.data.dates && (
                  <div class="meta-item">
                    <span class="meta-label">Termine</span>
                    <span class="meta-value">{workshop.data.dates}</span>
                  </div>
                )}
                {workshop.data.time && (
                  <div class="meta-item">
                    <span class="meta-label">Uhrzeit</span>
                    <span class="meta-value">{workshop.data.time}</span>
                  </div>
                )}
              </div>
            )}

            <a href={`/workshops/${workshop.id}`} class="workshop-link">
              Details ansehen
            </a>
          </article>
        ))}
      </div>

      {workshops.length === 0 && (
        <p class="empty">Noch keine Workshops verfügbar.</p>
      )}
    </div>
  </section>
</Base>

<style>
  .page {
    padding: var(--space-12) 0 var(--space-20);
  }

  .page-header {
    margin-bottom: var(--space-12);
  }

  .page-header h1 {
    font-size: var(--text-4xl);
    font-weight: 500;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-3);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .workshop-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .workshop-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: var(--space-6);
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border-subtle);
    border-radius: 2px;
  }

  .workshop-card:hover {
    background: var(--color-bg-muted);
  }

  .workshop-content h2 {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }

  .workshop-content h2 a {
    color: var(--color-text);
  }

  .workshop-card:hover .workshop-content h2 a {
    color: var(--color-accent);
  }

  .workshop-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .workshop-topics {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2);
    margin-top: var(--space-4);
  }

  .workshop-topics li {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    padding-left: var(--space-4);
    position: relative;
  }

  .workshop-topics li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 1px;
  }

  .workshop-meta {
    display: flex;
    gap: var(--space-8);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .meta-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .meta-value {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .workshop-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    margin-top: auto;
  }

  .workshop-link:hover {
    color: var(--color-accent-hover);
  }

  .workshop-link::after {
    content: '\2192';
  }

  .empty {
    text-align: center;
    padding: var(--space-12);
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .workshop-meta {
      flex-wrap: wrap;
      gap: var(--space-4);
    }

    .workshop-topics {
      grid-template-columns: 1fr;
    }
  }
</style>
