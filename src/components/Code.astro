---
import { codeToHtml } from 'shiki';

interface Props {
  code: string;
  lang?: string;
  title?: string;
}

const { code, lang = 'bash', title } = Astro.props;
const id = `code-${Math.random().toString(36).slice(2, 9)}`;

const html = await codeToHtml(code.trim(), {
  lang,
  theme: 'github-dark',
});
---

<div class="code-block">
  {title && <div class="code-title">{title}</div>}
  <div class="code-wrapper">
    <div class="code-content" id={id} set:html={html} />
    <button class="copy-button" data-code={code.trim()} aria-label="Code kopieren">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
      <span class="copy-text">Kopieren</span>
    </button>
  </div>
</div>

<script>
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', async () => {
      const code = button.getAttribute('data-code') || '';

      try {
        await navigator.clipboard.writeText(code);
        const textEl = button.querySelector('.copy-text');
        if (textEl) {
          textEl.textContent = 'Kopiert!';
          setTimeout(() => {
            textEl.textContent = 'Kopieren';
          }, 2000);
        }
      } catch (err) {
        console.error('Copy failed:', err);
      }
    });
  });
</script>

<style is:global>
  .code-block {
    margin: 1rem 0;
  }

  .code-title {
    background: #1f1f1f;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    color: #878787;
    border-radius: 6px 6px 0 0;
    border: 1px solid #2a2a2a;
    border-bottom: none;
    font-family: 'Geist Mono', monospace;
  }

  .code-wrapper {
    position: relative;
  }

  .code-content pre {
    background: #0d1117 !important;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 0;
    border: 1px solid #2a2a2a;
  }

  .code-title + .code-wrapper .code-content pre {
    border-radius: 0 0 6px 6px;
  }

  .code-content code {
    font-family: 'Geist Mono', monospace !important;
    font-size: 0.875rem;
  }

  .copy-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.625rem;
    background: rgba(45, 45, 45, 0.9);
    border: 1px solid #3a3a3a;
    border-radius: 4px;
    color: #878787;
    font-size: 0.75rem;
    cursor: pointer;
    transition: all 0.15s;
    backdrop-filter: blur(4px);
  }

  .copy-button:hover {
    background: rgba(58, 58, 58, 0.95);
    color: #e5e5e5;
  }
</style>
