---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import { codeToHtml } from 'shiki';

const prompts = await getCollection('library');

const categories = ['coding', 'review', 'debug', 'writing', 'analysis', 'other'];
const categoryLabels: Record<string, string> = {
  coding: 'Coding',
  review: 'Review',
  debug: 'Debugging',
  writing: 'Writing',
  analysis: 'Analyse',
  other: 'Konfiguration',
};

// Render entire prompt as syntax-highlighted markdown code block
async function renderPromptAsCode(content: string): Promise<string> {
  return await codeToHtml(content, {
    lang: 'markdown',
    theme: 'github-dark',
  });
}

// Pre-render all prompts
const renderedPrompts = await Promise.all(
  prompts.map(async (prompt) => ({
    ...prompt,
    renderedHtml: await renderPromptAsCode(prompt.data.prompt),
  }))
);
---

<Base title="Prompt Library" description="Bewährte Prompts zum Kopieren und Anpassen.">
  <section class="prompts-page">
    <div class="container">
      <header class="header">
        <h1>Prompt Library</h1>
        <p>Bewährte Prompts zum Kopieren und Anpassen.</p>
      </header>

      <div class="controls">
        <input
          type="search"
          id="search"
          placeholder="Suchen..."
          autocomplete="off"
        />
        <div class="filters" id="filters">
          {categories.map((cat) => (
            <button class="filter" data-category={cat}>
              {categoryLabels[cat]}
            </button>
          ))}
        </div>
      </div>

      <div class="prompts" id="prompts">
        {renderedPrompts.map((prompt) => (
          <article
            class="card"
            data-category={prompt.data.category}
            data-searchable={`${prompt.data.title} ${prompt.data.description} ${prompt.data.tags.join(' ')}`.toLowerCase()}
          >
            <header class="card-header">
              <span class="badge">{categoryLabels[prompt.data.category]}</span>
              <h2>{prompt.data.title}</h2>
              <p>{prompt.data.description}</p>
            </header>

            <div class="card-body">
              <button class="copy" data-prompt={prompt.data.prompt}>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
              </button>
              <Fragment set:html={prompt.renderedHtml} />
            </div>

            <footer class="card-footer">
              <div class="tags">
                {prompt.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </footer>
          </article>
        ))}
      </div>

      <p class="empty" id="empty">Keine Prompts gefunden.</p>
    </div>
  </section>
</Base>

<script>
  const search = document.getElementById('search') as HTMLInputElement;
  const filters = document.getElementById('filters')!;
  const prompts = document.getElementById('prompts')!;
  const empty = document.getElementById('empty')!;
  const cards = prompts.querySelectorAll('.card');
  const copyBtns = document.querySelectorAll('.copy');

  let activeFilter: string | null = null;

  function update() {
    const q = search.value.toLowerCase().trim();
    let visible = 0;

    cards.forEach((card) => {
      const el = card as HTMLElement;
      const cat = el.dataset.category;
      const text = el.dataset.searchable || '';

      const matchCat = !activeFilter || cat === activeFilter;
      const matchSearch = !q || text.includes(q);

      el.style.display = matchCat && matchSearch ? '' : 'none';
      if (matchCat && matchSearch) visible++;
    });

    empty.style.display = visible === 0 ? '' : 'none';
  }

  search.addEventListener('input', update);

  filters.addEventListener('click', (e) => {
    const btn = (e.target as HTMLElement).closest('.filter') as HTMLElement;
    if (!btn) return;

    const cat = btn.dataset.category!;

    filters.querySelectorAll('.filter').forEach((b) => b.classList.remove('active'));

    if (activeFilter === cat) {
      activeFilter = null;
    } else {
      activeFilter = cat;
      btn.classList.add('active');
    }

    update();
  });

  copyBtns.forEach((btn) => {
    btn.addEventListener('click', async () => {
      const prompt = (btn as HTMLElement).dataset.prompt!;

      await navigator.clipboard.writeText(prompt);
      btn.classList.add('copied');

      setTimeout(() => {
        btn.classList.remove('copied');
      }, 2000);
    });
  });

  update();
</script>

<style>
  .prompts-page {
    padding: 4rem 0;
    min-height: 100vh;
  }

  .header {
    margin-bottom: 2rem;
  }

  .header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .header p {
    color: var(--color-text-muted);
  }

  .controls {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  #search {
    width: 100%;
    max-width: 320px;
    padding: 0.625rem 1rem;
    font-size: 0.9375rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
  }

  #search:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter {
    padding: 0.375rem 0.875rem;
    font-size: 0.8125rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    background: transparent;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all 0.15s;
  }

  .filter:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text);
  }

  .filter.active {
    background: var(--color-text);
    color: var(--color-bg);
    border-color: var(--color-text);
  }

  .prompts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
  }

  .card-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .card-header h2 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .card-header p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .card-body {
    position: relative;
    padding: 0;
    background: var(--color-bg-subtle);
  }

  /* Markdown prose styles */
  .card-body :global(h1),
  .card-body :global(h2) {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 1.5rem 0 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .card-body :global(h3) {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 1.25rem 0 0.5rem;
  }

  .card-body :global(h1:first-child),
  .card-body :global(h2:first-child),
  .card-body :global(h3:first-child),
  .card-body :global(p:first-child) {
    margin-top: 0;
  }

  .card-body :global(p) {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin: 0 0 1rem;
  }

  .card-body :global(ul),
  .card-body :global(ol) {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }

  .card-body :global(li) {
    margin-bottom: 0.375rem;
  }

  .card-body :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  .card-body :global(code) {
    font-family: 'Geist Mono', ui-monospace, SFMono-Regular, monospace;
    font-size: 0.8125rem;
    background: rgba(110, 118, 129, 0.3);
    padding: 0.15rem 0.35rem;
    border-radius: 4px;
  }

  .card-body :global(pre),
  .card-body :global(.shiki) {
    margin: 0;
    padding: 1.25rem;
    border-radius: 0;
    overflow-x: auto;
    font-size: 0.8125rem;
    line-height: 1.6;
    background: #0d1117 !important;
    border: none;
  }

  .card-body :global(pre code),
  .card-body :global(.shiki code) {
    background: none !important;
    padding: 0;
    font-size: inherit;
    color: inherit;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.6875rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-bg-subtle);
    border-radius: 9999px;
    color: var(--color-text-muted);
  }

  .copy {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border: none;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 0.15s;
    z-index: 1;
  }

  .copy:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-text);
  }

  .copy.copied {
    background: #22c55e;
    color: white;
  }

  .empty {
    display: none;
    text-align: center;
    padding: 3rem;
    color: var(--color-text-muted);
  }
</style>
