---
import '@fontsource-variable/geist';
import '@fontsource-variable/geist-mono';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'KI-Tools im Coding-Alltag' } = Astro.props;
const fullTitle = title === 'Hola AI' ? title : `${title} â€” Hola AI`;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <title>{fullTitle}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body>
    <slot name="header">
      <header class="header">
        <nav class="nav container">
          <a href="/" class="logo">
            <span class="logo-text">Hola AI</span>
          </a>

          <ul class="nav-links">
            <li><a href="/workshops">Workshops</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/prompts">Prompts</a></li>
          </ul>
        </nav>
      </header>
    </slot>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <span class="footer-logo">Hola AI</span>
            <p>Lerne KI-Tools im Coding-Alltag einzusetzen.</p>
          </div>

          <div class="footer-links">
            <div class="footer-column">
              <h5>Inhalte</h5>
              <ul>
                <li><a href="/workshops">Workshops</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/prompts">Prompts</a></li>
              </ul>
            </div>

            <div class="footer-column">
              <h5>Kontakt</h5>
              <ul>
                <li><a href="mailto:oladayo.fagbemi@axelspringer.com">E-Mail</a></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Hola AI</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .logo-text {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 400;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  .logo:hover .logo-text {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    gap: var(--space-10);
    list-style: none;
  }

  .nav-links a {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: var(--tracking-wide);
    transition: color var(--transition-fast);
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width var(--transition-base);
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  main {
    min-height: calc(100vh - 72px - 320px);
  }

  .footer {
    background: var(--color-bg-subtle);
    padding: var(--space-16) 0 var(--space-8);
    margin-top: var(--space-24);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  .footer-brand {
    max-width: 320px;
  }

  .footer-logo {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-text);
    margin-bottom: var(--space-3);
  }

  .footer-brand p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
  }

  .footer-links {
    display: flex;
    gap: var(--space-16);
  }

  .footer-column h5 {
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .footer-column ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-column a {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .footer-column a:hover {
    color: var(--color-text);
  }

  .footer-bottom {
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border-subtle);
  }

  .footer-bottom p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .nav-links {
      gap: var(--space-6);
    }

    .footer-content {
      flex-direction: column;
    }

    .footer-links {
      gap: var(--space-10);
    }
  }
</style>
