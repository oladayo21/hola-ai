---
import Base from '../../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const workshops = await getCollection('workshops');

  return workshops.map((workshop) => ({
    params: { slug: workshop.id },
    props: { workshop },
  }));
}

const { workshop } = Astro.props;
const { Content } = await render(workshop);

const allSessions = await getCollection('sessions', ({ data }) => !data.draft);
const workshopSessions = allSessions
  .filter((session) => session.data.workshop === workshop.id)
  .sort((a, b) => a.data.order - b.data.order);
---

<Base title={workshop.data.title} description={workshop.data.description}>
  <section class="page">
    <div class="container">
      <header class="workshop-header">
        <a href="/workshops" class="back-link">Alle Workshops</a>
        <span class="workshop-label">Workshop-Reihe</span>
        <h1>{workshop.data.title}</h1>
        <p class="workshop-description">{workshop.data.description}</p>

        {(workshop.data.dates || workshop.data.time) && (
          <div class="workshop-info">
            {workshop.data.dates && (
              <div class="info-item">
                <span class="info-label">Termine</span>
                <span class="info-value">{workshop.data.dates}</span>
              </div>
            )}
            {workshop.data.time && (
              <div class="info-item">
                <span class="info-label">Uhrzeit</span>
                <span class="info-value">{workshop.data.time}</span>
              </div>
            )}
          </div>
        )}

        {workshop.data.topics && workshop.data.topics.length > 0 && (
          <ul class="workshop-topics">
            {workshop.data.topics.map((topic) => (
              <li>{topic}</li>
            ))}
          </ul>
        )}
      </header>

      <section class="sessions-section">
        <h2 class="sessions-title">Sessions</h2>

        <div class="session-list">
          {workshopSessions.map((session) => (
            <article class="session-card">
              <div class="session-header">
                <div class="session-number">
                  <span>{session.data.order}</span>
                </div>

                <div class="session-date">
                  <span class="day">{session.data.date.getDate()}</span>
                  <span class="month">{session.data.date.toLocaleDateString('de-DE', { month: 'short' }).toUpperCase()}</span>
                </div>

                <div class="session-title">
                  <h3>
                    <a href={`/workshops/${workshop.id}/${session.id}`}>{session.data.title}</a>
                  </h3>
                  {session.data.duration && <span class="duration">{session.data.duration}</span>}
                </div>
              </div>

              <p class="session-description">{session.data.description}</p>

              {session.data.slidesUrl && (
                <div class="session-footer">
                  <a href={session.data.slidesUrl} class="slides-link">Slides ansehen</a>
                </div>
              )}
            </article>
          ))}
        </div>

        {workshopSessions.length === 0 && (
          <p class="empty">Noch keine Sessions verf√ºgbar.</p>
        )}
      </section>
    </div>
  </section>
</Base>

<style>
  .page {
    padding: var(--space-12) 0 var(--space-20);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .back-link::before {
    content: '\2190';
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .workshop-header {
    max-width: 640px;
    margin-bottom: var(--space-16);
  }

  .workshop-label {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-accent);
    margin-bottom: var(--space-3);
  }

  .workshop-header h1 {
    font-size: var(--text-4xl);
    font-weight: 500;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-4);
  }

  .workshop-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  .workshop-info {
    display: flex;
    gap: var(--space-8);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .info-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .info-value {
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-text);
  }

  .workshop-topics {
    margin-top: var(--space-8);
    padding: var(--space-5);
    background: var(--color-bg-subtle);
    border-radius: 2px;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
  }

  .workshop-topics li {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    padding-left: var(--space-4);
    position: relative;
  }

  .workshop-topics li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 1px;
  }

  .sessions-section {
    margin-top: var(--space-12);
  }

  .sessions-title {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .session-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .session-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border-subtle);
    border-radius: 2px;
  }

  .session-card:hover {
    background: var(--color-bg-muted);
  }

  .session-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-3);
  }

  .session-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-bg-elevated);
    border-radius: 2px;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
  }

  .session-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 48px;
    padding: var(--space-1) var(--space-2);
    background: var(--color-accent-subtle);
    border-radius: 2px;
  }

  .session-date .day {
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: 1;
    color: var(--color-accent);
  }

  .session-date .month {
    font-size: 10px;
    text-transform: uppercase;
    color: var(--color-accent);
    opacity: 0.8;
  }

  .session-title {
    flex: 1;
  }

  .session-title h3 {
    font-size: var(--text-base);
    font-weight: 600;
    margin-bottom: var(--space-1);
    line-height: var(--leading-snug);
  }

  .session-title h3 a {
    color: var(--color-text);
  }

  .session-card:hover .session-title h3 a {
    color: var(--color-accent);
  }

  .session-title .duration {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .session-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    padding-left: calc(32px + var(--space-4));
  }

  .session-footer {
    display: flex;
    justify-content: flex-end;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .slides-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
  }

  .slides-link:hover {
    color: var(--color-accent-hover);
  }

  .slides-link::after {
    content: '\2192';
  }

  .empty {
    text-align: center;
    padding: var(--space-12);
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .workshop-info {
      flex-wrap: wrap;
      gap: var(--space-6);
    }

    .workshop-topics {
      grid-template-columns: 1fr;
    }

    .session-header {
      flex-wrap: wrap;
    }

    .session-description {
      padding-left: 0;
    }
  }
</style>
