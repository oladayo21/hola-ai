---
interface Props {
	title: string;
	description?: string;
	theme?: string;
}

const { title, description, theme = 'black' } = Astro.props;
const revealVersion = '5.1.0';
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Hola AI</title>
		{description && <meta name="description" content={description} />}
		<link rel="stylesheet" href={`https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/dist/reset.css`} />
		<link rel="stylesheet" href={`https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/dist/reveal.css`} />
		<link rel="stylesheet" href={`https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/dist/theme/${theme}.css`} />
		<link rel="stylesheet" href={`https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/plugin/highlight/monokai.css`} />
		<style>
			body {
				margin: 0;
				padding: 0;
			}
			.reveal {
				font-size: 2rem;
			}
			.reveal h1 {
				font-size: 2.5em;
			}
			.reveal h2 {
				font-size: 1.75em;
			}
			.reveal pre {
				font-size: 0.55em;
				width: 100%;
			}
			.reveal code {
				background: rgba(255, 255, 255, 0.1);
				padding: 0.1em 0.3em;
				border-radius: 4px;
			}
			.reveal pre code {
				background: none;
				padding: 1em;
			}
			.back-link {
				position: fixed;
				top: 1rem;
				left: 1rem;
				z-index: 100;
				color: white;
				text-decoration: none;
				font-size: 0.9rem;
				opacity: 0.7;
			}
			.back-link:hover {
				opacity: 1;
			}
		</style>
	</head>
	<body>
		<a href="/" class="back-link">Zuruck zur Dokumentation</a>
		<div class="reveal">
			<div class="slides">
				<slot />
			</div>
		</div>
		<script is:inline define:vars={{ revealVersion }}>
			const script = document.createElement('script');
			script.src = `https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/dist/reveal.js`;
			script.onload = () => {
				const highlightScript = document.createElement('script');
				highlightScript.src = `https://cdn.jsdelivr.net/npm/reveal.js@${revealVersion}/plugin/highlight/highlight.js`;
				highlightScript.onload = () => {
					Reveal.initialize({
						hash: true,
						slideNumber: true,
						progress: true,
						controls: true,
						center: true,
						transition: 'slide',
						plugins: [RevealHighlight],
					});
				};
				document.head.appendChild(highlightScript);
			};
			document.head.appendChild(script);
		</script>
	</body>
</html>
